choice = "-"
while choice != "0":
    if choice in "012345":
        print("You chose {}".format(choice))
    else: 
        print("Please choose your option from the list below:.. ")
        print("1:\tLearn Python ")
        print("2:\t read a book")
        print("3:\tGo Swimming")
        print("4:\teast some food")
        print("5:\tGo to bed")
        print("0:\tExit")
        
    choice = input()
