Movies = ['Matrix', 'Terminator', 'Star Wars', 'Lord of the Rings']

l = []
for title in Movies:
    l.append(title)
    print([title for title in Movies])
    
    l = []
    for title in Movies:
        l.append(title + ' Is a good movie')
        print(l)
